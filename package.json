{
  "name": "league-prod-toolkit-core",
  "version": "0.0.1",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && webpack",
    "build:modules": "node build/build-modules.js",
    "postbuild": "copyfiles core/web/views/**.* core/web/public/**.* dist",
    "start": "npm run build && node --trace-warnings dist/core/app.js",
    "start:watch": "nodemon",
    "ui": "browser-sync start --proxy=localhost:3003 --files='dist/core/**/*.css, dist/core/**/*.pug, dist/core/**/*.js' --ignore=node_modules --reload-delay 10 --no-ui --no-notify --no-open",
    "dev": "concurrently \"docker-compose up\" \"npm:start:watch\" \"npm:ui\"",
    "tsc": "tsc",
    "lint": "eslint core/**",
    "setuphooks": "git config --local core.hooksPath .hooks",
    "hooks:pre-commit": "npm run lint && npm run build"
  },
  "dependencies": {
    "bootstrap": "^4.5.0",
    "cli-progress": "^3.3.1",
    "copy-webpack-plugin": "^9.0.0",
    "debug": "~2.6.9",
    "express": "^4.17.1",
    "jquery": "^3.5.1",
    "jspath": "^0.4.0",
    "lcu-connector": "^2.1.2",
    "leaguejs": "^2.1.3",
    "morgan": "~1.9.1",
    "needle": "^2.4.0",
    "pug": "^2.0.4",
    "send": "^0.17.1",
    "toastr": "^2.1.4",
    "typescript": "^3.6.3",
    "uniqid": "^5.3.0",
    "winston": "^3.2.1",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/cli-progress": "^1.8.1",
    "@types/minimist": "^1.2.0",
    "@types/needle": "^2.0.4",
    "@types/node": "^12.7.7",
    "@types/express": "^4.17.13",
    "@types/send": "^0.14.5",
    "@types/uniqid": "^5.3.0",
    "@types/ws": "^7.2.9",
    "@typescript-eslint/eslint-plugin": "4",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.2.0",
    "electron": "^13.6.6",
    "eslint": "7",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "nodemon": "^2.0.4",
    "ts-loader": "^9.2.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "nodemonConfig": {
    "watch": [
      "core",
      "modules"
    ],
    "exec": "npm start",
    "ext": "ts,js,json,pug,css"
  }
}
