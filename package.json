{
  "name": "league-prod-toolkit-core",
  "version": "1.11.2",
  "scripts": {
    "build": "tsc && webpack",
    "build:modules": "node dist/utils/build-modules.js",
    "update": "node dist/utils/update.js",
    "postbuild": "copyfiles core/web/views/**.* core/web/public/**.* dist",
    "start": "node --trace-warnings dist/core/app.js",
    "tsc": "tsc",
    "lint": "eslint \"**/*.{ts,tsx}\" --fix",
    "prettier": "prettier --write --ignore-unknown ./**",
    "setuphooks": "git config --local core.hooksPath .hooks",
    "hooks:pre-commit": "npm run lint && npm run build"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "body-parser": "^1.20.2",
    "bootstrap": "^4.5.0",
    "cli-progress": "^3.12.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.1",
    "express-fileupload": "^1.5.1",
    "express-rate-limit": "^7.4.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6",
    "jquery": "^3.7.1",
    "jsonwebtoken": "^9.0.2",
    "jspath": "^0.4.0",
    "jwt-decode": "^3.1.2",
    "minimist": "^1.2.8",
    "nanospinner": "^1.1.0",
    "pug": "^3.0.3",
    "semver": "^7.6.3",
    "send": "^1.1.0",
    "toastr": "^2.1.4",
    "tslib": "^2.8.1",
    "uniqid": "^5.3.0",
    "uuid-apikey": "^1.5.3",
    "validator": "^13.12.0",
    "winston": "^3.15.0",
    "ws": "^8.18.0",
    "zip-lib": "^1.0.4"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.1",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.7.5",
    "@types/send": "^0.17.4",
    "@types/uniqid": "^5.3.4",
    "@types/validator": "^13.12.2",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "copy-webpack-plugin": "^12.0.2",
    "copyfiles": "^2.2.0",
    "eslint": "^8.57.1",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "nodemonConfig": {
    "watch": [
      "core",
      "modules"
    ],
    "exec": "npm start",
    "ext": "ts,js,json,pug,css"
  }
}
