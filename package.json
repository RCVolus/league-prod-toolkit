{
  "name": "league-prod-toolkit-core",
  "version": "1.2.12",
  "scripts": {
    "build": "tsc && webpack",
    "build:modules": "node dist/utils/build-modules.js",
    "update": "node dist/utils/update.js",
    "postbuild": "copyfiles core/web/views/**.* core/web/public/**.* dist",
    "start": "node --trace-warnings dist/core/app.js",
    "tsc": "tsc",
    "lint": "eslint *",
    "prettier": "prettier --write --ignore-unknown ./**",
    "setuphooks": "git config --local core.hooksPath .hooks",
    "hooks:pre-commit": "npm run lint && npm run build"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "body-parser": "^1.19.2",
    "bootstrap": "^4.5.0",
    "cli-progress": "^3.10.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.17.1",
    "express-fileupload": "^1.3.1",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.1.4",
    "jquery": "^3.5.1",
    "jsonwebtoken": "^8.5.1",
    "jspath": "^0.4.0",
    "jwt-decode": "^3.1.2",
    "minimist": "^1.2.6",
    "nanospinner": "^1.1.0",
    "pug": "^3.0.0",
    "semver": "^7.3.8",
    "send": "^0.17.1",
    "toastr": "^2.1.4",
    "tslib": "^2.3.1",
    "uniqid": "^5.3.0",
    "uuid-apikey": "^1.5.3",
    "winston": "^3.2.1",
    "ws": "^8.5.0",
    "zip-lib": "^0.7.3"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.9.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.2",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^9.0.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/minimist": "^1.2.0",
    "@types/node": "^18.11.2",
    "@types/send": "^0.14.5",
    "@types/uniqid": "^5.3.0",
    "@types/ws": "^8.5.1",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "copy-webpack-plugin": "^10.0.0",
    "copyfiles": "^2.2.0",
    "eslint": "^8.26.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.7.1",
    "ts-loader": "^9.2.2",
    "typescript": "^4.8.4",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "nodemonConfig": {
    "watch": [
      "core",
      "modules"
    ],
    "exec": "npm start",
    "ext": "ts,js,json,pug,css"
  }
}
